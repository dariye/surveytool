::-webkit-scrollbar {
    display: none;
}

// Mixins
@mixin zero-bmo {
  //border:0, margin:0,outline:0
  border: 0;
  margin: 0;
  outline: 0;
  vertical-align: baseline;
}


// Navigation
#demo-header {
  background-color: #fff !important;
  .navbar-header {
    margin-left: 50px !important;
  }
  .nav {
    display: inherit;
    li:nth-child(1) {
      padding-top: 21px;
      padding-right: 10px;
    }
  }
  ul {
    @include zero-bmo;
    padding-right: 83px;
    list-style: none;
  }
  li {
    @include zero-bmo;
    display: list-item;
    text-align: -webkit-match-parent;
    padding-left: 3px;
    padding-right: 3px;
    padding-top: 21px;
  }
}



