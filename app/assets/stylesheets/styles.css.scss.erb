.indicator {
  @include zero-bmo;
  display: inline-block;
  right: 1em;
  padding: 0.3em;
  background: #000;
  border-radius: 50%;
  opacity: 0.5;
  transition: opacity 0.5s;
  &.active,
  &:hover {
    background-color: red;
  }
}

