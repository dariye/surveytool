.container
  .row
    .col-md-12
      %h1.blackshade-text.centered
        Survey Responses
      %div.table-responsive
        %table.table.table-hover
          %thead
            %tr
              %th Name
              %th Email
          %tbody(ng-repeat="user in users")
            %tr(ng-click="showMore = !showMore")
              %td
                {{ user.firstname + ' ' + user.lastname }}
              %td
                {{ user.email }}

            %tr(ng-show="showMore")
              %td(colspan="2")
                %ul
                  %li(ng-repeat='response in user.response track by $index' class="list-unstyled")
                    {{ response['question'] }}
                    %strong
                      {{ response['answer'] }}


/ %a(href="" ng-click="deleteUser(user.id, $index)") Remove

