.container
  .row
    .col-md-6.col-md-offset-3
      .push-down
        .alert.alert-danger(role="alert" ng-show="error")
          {{ error }}
        %br/
        %form(ng-submit="handleRegBtnClick()" role="form" ng-init="registrationForm = {}")
          .form-group
            %input.form-control(type="email" name="email" id="email" ng-model="registrationForm.email" required="required" placeholder="Email")
          .form-group
            %input.form-control(type="password" name="password" id="password" ng-model="registrationForm.password" required="required" placeholder="Password")

          .form-group
            %input.form-control(type="password" name="password_confirmation" id="password_confirmation" ng-model="registrationForm.password_confirmation" required="required" placeholder="Password confirmation")

          .form-group
            %button(type="submit" class="btn btn-primary btn-lg")
              Register

