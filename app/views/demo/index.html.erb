<h1>Users</h1>
<div ng-controller="UserCtrl">
  <form ng-submit="createUser()">
    <input type="text" ng-model='newUserFullname' placeholder="Enter Full Name">
    <input type="email" ng-model="newUserEmail" placeholder="Enter your Email">
    <input type="submit" value="Add">
  </form>
  <ul>
    <li ng-repeat="user in users">
      {{user.firstname}}, {{user.email}}
      <a href="" ng-click="deleteUser(user.id, $index)">Remove</a>
    </li>
  </ul>
</div>